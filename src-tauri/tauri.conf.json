{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "InnoMonitor",
  "version": "1.1.4",
  "identifier": "com.innomonitor.app",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:3520",
    "beforeBuildCommand": "npm run build:frontend",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "InnoMonitor",
        "width": 1024,
        "height": 768,
        "minWidth": 1024,
        "minHeight": 768
      }
    ],
    "security": {
      "csp": null,
      "capabilities": ["default"]
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "macOS": {
      "entitlements": "entitlements.plist",
      "minimumSystemVersion": "10.13",
      "signingIdentity": null
    },
    "windows": {
      "certificateThumbprint": null,
      "digestAlgorithm": "sha256",
      "timestampUrl": "",
      "wix": {
        "language": ["en-US"],
        "template": null
      },
      "nsis": {
        "displayLanguageSelector": true,
        "installMode": "currentUser",
        "template": null
      },
      "allowDowngrades": false,
      "webviewInstallMode": {
        "type": "downloadBootstrapper"
      }
    },
    "publisher": "InnoMonitor Team",
    "copyright": "Copyright Â© 2025 InnoMonitor Team",
    "category": "Utility",
    "shortDescription": "Advanced network activity monitoring and analysis tool",
    "longDescription": "InnoMonitor provides comprehensive network traffic monitoring with real-time packet capture, automatic adapter filtering, and cross-platform compatibility. Features include traffic deduplication, historical analysis, and detailed network statistics.",
    "externalBin": [],
    "resources": [
      "libs/*",
      "npcap-runtime/*.dll"
    ]
  }
}
