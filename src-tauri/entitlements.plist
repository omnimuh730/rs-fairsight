<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
    <!-- Network monitoring capabilities -->
    <key>com.apple.security.network.client</key>
    <true/>
    <key>com.apple.security.network.server</key>
    <true/>
    
    <!-- Required for packet capture and network monitoring -->
    <!-- Note: com.apple.security.device.bpf is unofficial and may need Apple approval for App Store -->
    <key>com.apple.security.device.bpf</key>
    <true/>
    
    <!-- Required for system monitoring and event taps -->
    <key>com.apple.security.personal-information.accessibility</key>
    <true/>
    
    <!-- File system access for logs and data storage -->
    <key>com.apple.security.files.user-selected.read-write</key>
    <true/>
    <key>com.apple.security.files.downloads.read-write</key>
    <true/>
    
    <!-- Allow dylib loading for bundled libpcap -->
    <key>com.apple.security.cs.allow-dyld-environment-variables</key>
    <true/>
    <key>com.apple.security.cs.allow-unsigned-executable-memory</key>
    <true/>
    
    <!-- Disable library validation to allow bundled libraries -->
    <key>com.apple.security.cs.disable-library-validation</key>
    <true/>
    
    <!-- Allow JIT for potential performance optimizations -->
    <key>com.apple.security.cs.allow-jit</key>
    <true/>
</dict>
</plist>
